---
interface Props {
  href: string;
  text: string;
  icon?: string; // Optional: class name for an icon font or path for an <img>
  target?: "_blank" | "_self";
}

const { href, text, icon, target = "_blank" } = Astro.props;
---

<div class="link-item">
  <a
    href={href}
    target={target}
    rel={target === "_blank" ? "noopener noreferrer" : undefined}
    class="link-button"
  >
    {icon && <span class="link-icon">{/* Icon rendering logic here */}</span>}
    <span class="link-text">{text}</span>
  </a>
</div>

<style>
  .link-item {
    margin-bottom: 1rem; /* Space between link buttons */
  }

  .link-button {
    display: block;
    padding: 0.9rem 1rem;
    border: var(--border-default); /* Use variable */
    background-color: var(--color-button-bg); /* Use variable */
    color: var(--color-text); /* Use variable */
    text-align: center;
    font-size: 1em;
    font-weight: bold;
    transition:
      background-color 0.2s ease,
      border-color 0.2s ease,
      color 0.2s ease;
  }
  .link-button:hover {
    background-color: var(--color-button-hover-bg); /* Use variable */
    border-color: var(--color-text-muted); /* Use variable */
  }
  /* Optional Icon Styling */
  .link-icon {
    margin-right: 0.5rem;
    /* Add styling for font icons or background images */
  }
</style>
