---
const currentYear = new Date().getFullYear();
import githubIcon from "../../public/icons/github.svg";
import linkedinIcon from "../../public/icons/linkedin.svg";
---

<footer>
  <div
    class="social-icons"
    style="margin-bottom: 0.5rem; display: flex; justify-content: center; gap: 1rem;"
  >
    <a
      href="https://github.com/iiSmitty"
      target="_blank"
      rel="noopener noreferrer"
      title="GitHub"
    >
      <img
        src={githubIcon.src}
        width="24"
        height="24"
        alt="GitHub Icon"
        class="social-icon-img"
      />
    </a>
    <a
      href="https://www.linkedin.com/in/andrezsmit/"
      target="_blank"
      rel="noopener noreferrer"
      title="LinkedIn"
    >
      <img
        src={linkedinIcon.src}
        width="24"
        height="24"
        alt="LinkedIn Icon"
        class="social-icon-img"
      />
    </a>
  </div>
  <div class="copyright-text">
    Â© {currentYear}. If you can read this, thank a dev.
  </div>
</footer>

<style>
  html[data-theme="dark"] .social-icon-img {
    /* Invert the color (black becomes white) and adjust brightness/contrast */
    filter: invert(92%) sepia(6%) saturate(88%) hue-rotate(190deg)
      brightness(99%) contrast(90%);
    opacity: 1;
  }

  html[data-theme="dark"] .social-icons a:hover .social-icon-img {
    filter: invert(92%) sepia(6%) saturate(88%) hue-rotate(190deg)
      brightness(85%) contrast(90%);
  }

  /* Apply theme variables to the footer container */
  footer {
    padding: 0.75rem 1rem;
    border-top: var(--border-default);
    background-color: var(--color-container-bg);
    margin-top: auto;
    text-align: center;
    font-size: 0.9em;
    color: var(--color-text-muted);
  }

  /* --- Icon Styles --- */
  .social-icon-img {
    /* Default icon size */
    width: 24px;
    height: 24px;
    vertical-align: middle;
    display: inline-block;
    transition: opacity 0.2s ease;
    opacity: 0.7;
  }

  /* Apply hover effect via opacity */
  .social-icons a:hover .social-icon-img {
    opacity: 1;
  }

  /* Remove color/font-size styling from the anchor, as it doesn't affect the img */
  .social-icons a {
    display: inline-block;
    line-height: 0;
  }

  /* --- Responsive Styles --- */
  @media (max-width: 600px) {
    /* Adjust icon size on mobile */
    .social-icon-img {
      width: 20px;
      height: 20px;
    }

    /* Adjust copyright text size */
    .copyright-text {
      font-size: 0.75em;
    }
  }

  /* Slightly increase icon opacity in dark mode if they appear too dim */
  html[data-theme="dark"] .social-icon-img {
    opacity: 0.8;
  }
  html[data-theme="dark"] .social-icons a:hover .social-icon-img {
    opacity: 1;
  }
</style>
